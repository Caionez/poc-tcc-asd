@model InfoCadastraisWebApp.ViewModels.ConsultaPrestadorViewModel

@using InfoCadastraisWebApp.Models;

@{
    ViewData["Title"] = "Consulta de Prestadores";
}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-6">
        <section>
            <form asp-controller="Home" asp-action="ConsultarPrestador" method="post">
                <h4>Busque prestadores que atendem uma determinada especialidade:</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Especialidade"></label>
                    <input asp-for="Especialidade" class="form-control" />
                    <span asp-validation-for="Especialidade" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="BuscaExterna">
                            <input asp-for="BuscaExterna" />
                            @Html.DisplayNameFor(m => m.BuscaExterna)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Pesquisar</button>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6">
@if (Model != null && Model.PrestadoresEncontrados != null)
{
        <table class="table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Conveniado</th>
                    <th>Endere√ßo Conveniado</th>
                </tr>
            </thead>
            <tbody>
    @foreach (var item in Model.PrestadoresEncontrados) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Conveniado.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Conveniado.Endereco)
                    </td>
                </tr>
    }
            </tbody>
        </table>
}
    </div>
</div>
